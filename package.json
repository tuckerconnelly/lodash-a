{
  "name": "lodash-a",
  "version": "0.0.1",
  "description": "Asynchronous helpers for lodash/fp",
  "repository": "https://github.com/tuckerconnelly/lodash-a",
  "main": "index.js",
  "scripts": {
    "test": "env $([ -f .env.test ] && cat .env.test | grep -v ^# | xargs) jest --detectOpenHandles --no-cache",
    "prettier": "prettier --write './**/*.js'",
    "lint": "eslint './**/*.js'"
  },
  "dependencies": {
    "lodash": "^4.17.11"
  },
  "license": "MIT",
  "devDependencies": {
    "babel-eslint": "^8.2.3",
    "eslint": "^4.19.1",
    "husky": "^0.14.3",
    "jest": "^23.6.0",
    "lint-staged": "^7.1.2",
    "prettier": "^1.13.5"
  },
  "eslintConfig": {
    "parser": "babel-eslint",
    "extends": "eslint:recommended",
    "env": {
      "node": true,
      "es6": true,
      "jest": true
    },
    "rules": {
      "no-console": 0,
      "semi": 1
    }
  },
  "prettier": {
    "singleQuote": true
  },
  "lint-staged": {
    "linters": {
      "./**/*.js": [
        "npm run prettier -- ",
        "npm run lint -- ",
        "git add"
      ]
    }
  },
  "jest": {
    "watchPathIgnorePatterns": [
      "tmp",
      "json"
    ],
    "forceExit": true,
    "setupTestFrameworkScriptFile": "./testUtils.js"
  },
  "husky": {
    "hooks": {
    }
  }
}
